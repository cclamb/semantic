#!/usr/bin/env ruby
require 'rdf'
require 'rdf/rdfxml'

include RDF

Dependancy_Data = 'http://www.snee.com/rdf/elvisimp.rdf'
Dependancy_Data = 'http://www.w3.org/2005/03/css-dep/css3deps.rdf'

# Load some RDF.rb project information into an in-memory graph:
graph = RDF::Graph.load Dependancy_Data

query = RDF::Query.new({
	:document => {
		RDF.type => 'http://www.w3.org/TR/2001/CR-css3-selectors-20011113/'
	}
})

query.execute(graph).each do |solution|
  puts solution.inspect
end

